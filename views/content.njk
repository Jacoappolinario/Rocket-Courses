{% extends "layout.njk"%}

{% block head %}
    <title>Conte√∫dos - Rocketseat</title>

    <link href="https://fonts.googleapis.com/icon?family=Material+Icons"
      rel="stylesheet">
{% endblock %}

{% block content %}

<section class="cards">
    {% for course in courses%}
    <div class="card" id="{{ course.id }}">
        <div class="card__image-container">
            <img src="https://skylab.rocketseat.com.br/static/{{ course.image }}" alt="Imagem de {{ course.id }}">
        </div>
        <div class="card__content">
            <p class="card__modulo">Modulos: {{ course.module}}</p>
        </div>
        <div class="card__info">
            <p class="card__price">{{ course.price }}</p>
        </div>
    </div>
    {% endfor %}
</section>

<div class="modal-overlay">
    <div class="modal">
        <a class="maximize-modal">
            <i class="material-icons">aspect_ratio</i>
        </a> 

        <a class="minimize-modal hidden">
            <i class="material-icons">minimize</i>
        </a>

        <a class="close-modal">
            <i class="material-icons">close</i>
        </a>

        <div class="modal-content">
            <iframe src="" frameborder="0"></iframe>
        </div>
    </div>
</div>

<script src="scripts.js"></script>

{% endblock %}
  